<MainWidget>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: root.timer
        Label:
            text: root.mode_name
        Label:
            text: f'\n{root.mes}'

        BoxLayout:
            Button:
                text: 'Запуск'
                on_press: root.start()
            Button:
                text: 'Сброс'
                on_press: root.reset()
        BoxLayout:
            id: modes

        Button:
            text: 'Добавить режим'
            on_press:
                root.manager.transition.direction = 'up'
                root.manager.transition.duration = '0.4'
                root.manager.current = 'add_mode'

<AddMode>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Добавить режим пиликания'
        Button:
            text: 'Назад'
            on_press:
                root.manager.transition.direction = 'down'
                root.manager.transition.duration = '0.4'
                root.manager.current = 'main_widget'
