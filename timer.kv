<MainWidget>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: root.timer

        Label:
            text: 'Программа 1. 24 минуты'

        BoxLayout:
            Button:
                text: 'Запуск'
                on_press: root.start()
            Button:
                text: 'Сброс'
                on_press: root.reset()
        BoxLayout:
            Button:
                text: 'Программа 1'
            Button:
                text: 'Программа 2'
            Button:
                text: 'Программа 3'
            Button:
                text: 'Программа 4'

        Button:
            text: 'Добавить режим'
            on_press:
                root.manager.transition.direction = 'up'
                root.manager.transition.duration = '0.4'
                root.manager.current = 'add_mode'

<AddMode>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Добавить режим пиликания'
        Button:
            text: 'Назад'
            on_press:
                root.manager.transition.direction = 'down'
                root.manager.transition.duration = '0.4'
                root.manager.current = 'main_widget'
